/**index.wxss**/
.content{
  background: #f4f4f4;
  padding: 15px;
}
.content .post{
  margin-bottom: 15px;
  padding: 15px;
  background: #fff;
  box-sizing: border-box;
  width: 100%;
  font-size: 34rpx;
  color: #333;
}
.content .post .title-img image{
  width: 100%;
  height: 350rpx;
}
.content .post .info,
.content .post .title{
  margin-top: 20rpx;
  line-height: 30px;
}
.content .post .info .user,
.content .post .info .views,
.content .post .info .comments{
  margin-right: 20px;
  display: inline-block;
}
.content .post .info .user-img{
  width: 30px;
  height: 30px;
  margin-right: 10px;
  border-radius: 100%;
  position: relative;
  top: 8px;
}
.content .post .info .icon{
  width: 22px;
  height: 20px;
  display: inline-block;
  position: relative;
  top: 3px;
  margin-right: 3px;
}
/** 修改默认的navigator点击态 **/
.navigator-hover {
    background: none;
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover {
     background: none;
     color: #333;
}